<Window x:Class="TailTestPCWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TailTestPCWPF"
        mc:Ignorable="d"
        Title="TailTester" Height="350" Width="604">
    <Grid>
        <TextBlock Text="WELCOME!" Name="HeaderText"  TextAlignment="Center" HorizontalAlignment="Center" FontSize="30" TextWrapping="Wrap"/>

        <DataGrid Margin="35" Name="gridResults" ItemsSource="{Binding list}" AutoGenerateColumns="True" Visibility="Hidden" />

        <ProgressBar Name = "ProgessBar" Margin = "35" Height = "15" IsIndeterminate = "True" Visibility="Hidden" />

        <TextBlock Text="USB" Name="UsbText" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="10"></TextBlock>
        
    </Grid>
</Window>
